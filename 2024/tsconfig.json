    "compilerOptions": {
        "target": "ESNext",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "rootDir": ".",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "checkJs": true,
        "types": ["vitest"]
    },
    "include": [ "./**/*.ts" ],
    "exclude": [ "node_modules", "**/*.js" ]
}
