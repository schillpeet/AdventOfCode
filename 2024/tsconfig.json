{
    "compilerOptions": {
        "target": "ESNext",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "rootDir": ".",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "checkJs": true,
        "allowJs": true,
        "types": ["vitest/globals"],
        // to use .ts extensions in tests
        "allowImportingTsExtensions": true,
        "noEmit": true,
    },
    "include": ["**/*.ts"],
    "exclude": ["node_modules"]
}
